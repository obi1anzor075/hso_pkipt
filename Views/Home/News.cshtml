@using HsoPkipt.ViewModels.News
@model NewsIndexVM

@{
    ViewData["Title"] = "Новости";
}

<main class="news-page">
    <div class="news-container">
        <h2 class="news-title">Новости</h2>

        <div class="news-grid" id="newsGrid">
            @if (Model.NewsItems.Any())
            {
                <partial name="_NewsCardsPartial" model="Model.NewsItems" />
            }
            else
            {
                <div class="card-news not-load">
                    <img src="~/assets/icon/err.no-load.svg" alt="Пусто">
                    <div class="card-text-wrapper">
                        <p class="card-title">Новостей пока нет</p>
                    </div>
                </div>
            }
        </div>

        @if (Model.HasNextPage)
        {
            <div class="load-more-container" id="loadMoreContainer">
                <button class="btn-load-more" id="btnLoadMore">
                    Показать еще
                    <span class="loading-spinner hidden" id="loadingSpinner"></span>
                </button>
            </div>
        }
    </div>
</main>

@section Scripts {
    <script src="~/js/app/news-controller.js"></script>
}